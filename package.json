{
  "name": "gemini-chatbot-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev --workspace=backend\" \"npm:dev --workspace=frontend\"",
    "install": "npm install --workspace=frontend && npm install --workspace=backend",
    "build": "npm run build --workspace=frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
